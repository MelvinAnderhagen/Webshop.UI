@page
@model Webshop.UI.Pages.Login.LoginModel
@{
}

<h1>Customer Login</h1>

<form asp-page-handler="Login">
    <div class="form-group">
        <label asp-for="user.Email">Email address:</label>
        <input asp-for="user.Email" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="user.Password">Password:</label>
        <input asp-for="user.Password" class="form-control">
        <br />
    </div>
    <span asp-validation-for="user.Email" class=@Model.AlertsCaller role="alert"> @Model.Feedback </span>
    <br />
    <br />
    <button type="Submit" class="btn btn-default">Login</button>

</form>
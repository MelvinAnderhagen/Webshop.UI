@page
@model Webshop.UI.Pages.Edit.ProductsModel
@{
}

<h1>Products</h1>
<br />
@foreach (var prod in Model.Prods)
{
<div class="text-center">
    <img src="@prod.Image" alt="Card image cap" class="img-thumbnail" />
    <h6>Product : @prod.Name</h6>
    <h6>Price : @prod.Price$</h6>
    <h6>Message: @prod.Message</h6>

        <form asp-page-handler="Edit">
            <input type="hidden" asp-for="Id" value="@prod.id" />
            <br />
            <button type="submit">Edit</button>
            <br />
        </form>
    </div>

        

}